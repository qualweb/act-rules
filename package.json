{
  "name": "@qualweb/act-rules",
  "version": "0.7.0-alpha",
  "description": "ACT rules module for qualweb web accessibility evaluator",
  "main": "dist/act.bundle.js",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "tsc": "tsc",
    "test": "mocha test/rule.spec.mjs",
    "test:url": "mocha test/url.spec.mjs",
    "compile:rules": "node compile-rules.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prebuild": "npm run compile:rules && rimraf prebuild && tsc --build",
    "build": "npm run prebuild && rimraf dist && webpack --mode production && rimraf prebuild",
    "prepare": "npm run build"
  },
  "keywords": [
    "a11y",
    "act",
    "act-rules",
    "accessibility",
    "qualweb",
    "evaluator",
    "rule"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/qualweb/act-rules.git"
  },
  "author": "Jo√£o Vicente",
  "license": "ISC",
  "devDependencies": {
    "@qualweb/dom": "0.2.3",
    "@qualweb/locale": "0.1.4",
    "@qualweb/qw-page": "0.3.0-alpha2",
    "@qualweb/types": "0.8.0-alpha5",
    "@qualweb/util": "0.6.0-alpha2",
    "@tsconfig/recommended": "^1.0.1",
    "@types/node": "^16.4.5",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "chai": "^4.3.4",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-sonarjs": "^0.9.1",
    "mocha": "^9.0.3",
    "node-fetch": "^2.6.1",
    "prettier": "^2.3.2",
    "puppeteer": "^13.0.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.3.5",
    "webpack": "^5.47.0",
    "webpack-cli": "^4.7.2"
  }
}
